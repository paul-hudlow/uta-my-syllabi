<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="edu.uta.mysyllabi.CreateCourse" >

    <EditText
        android:id="@+id/course_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/course_name" />
    
    <EditText
        android:id="@+id/course_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/course_title"
        android:inputType="textCapWords" />
    
    <EditText
        android:id="@+id/meeting_length"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/meeting_length"
        android:inputType="number" />
    
    <Button
        android:id="@+id/meeting_start"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/meeting_start"
        android:onClick="showTimePicker" />
    
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content">
    	
    <CheckBox android:id="@+id/checkbox_mon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/day_mon"
        android:layout_weight="1" />
    
    <CheckBox android:id="@+id/checkbox_tue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/day_tue"
        android:layout_weight="1" />
    
    <CheckBox android:id="@+id/checkbox_wed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/day_wed"
        android:layout_weight="1" />
    
    <CheckBox android:id="@+id/checkbox_thu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/day_thu"
        android:layout_weight="1" />
    
    <CheckBox android:id="@+id/checkbox_fri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/day_fri"
        android:layout_weight="1" />
    
    <CheckBox android:id="@+id/checkbox_sat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/day_sat"
        android:layout_weight="1" />
    
    <CheckBox android:id="@+id/checkbox_sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/day_sun"
        android:layout_weight="1" />
    </LinearLayout>
    
	<EditText
        android:id="@+id/meeting_location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/meeting_location"
        android:inputType="textCapWords" />
    
    <EditText
        android:id="@+id/instructor_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/instructor_name"
        android:inputType="textCapWords" />
    
    <Button
        android:id="@+id/save"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/course_save"
	    android:onClick ="saveCourse" />

</LinearLayout>
</ScrollView>
